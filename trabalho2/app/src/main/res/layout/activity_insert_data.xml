<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="86dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/t_passado" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="65dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:text="INFORME SEU NOME" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/editTextNomeA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="15"
            android:inputType="textPersonName"
            android:text="" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:text="INFORME O NOME DA DISCIPLINA" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/editTextNomeD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="15"
            android:inputType="textPersonName"
            android:text="" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:text="INFORME A PRIMEIRA NOTA" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/editTextN1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="15"
            android:inputType="numberDecimal"
            android:text="" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:text="INFORME SUA SEGUNDA NOTA" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/editTextN2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="15"
            android:inputType="numberDecimal"
            android:text="" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/buttonSalvar"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Calcular" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>